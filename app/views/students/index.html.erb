<h1>GeekBurger</h1>
<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
<h3>Member一覧</h3>
<%= link_to "新規投稿ページ!", "/students/new" %>
<div class="studentss-container">
    <% @students.each do |t| %>
    <div class="student">
        <%= t.name %>
        <%= t.profile %>
        <%= t.mentor %>
        <%= t.grade %>
        <%= t.created_at %>
        <%= link_to "詳細へ", student_path(t.id) %>
        <%= link_to "編集する", edit_student_path(t.id) %>
        <%= button_to "削除する", student_path(t.id), method: :delete %>
    </div>
    <% end %>
</div>

